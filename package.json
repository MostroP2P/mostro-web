    "buffer": "^6.0.3",
    "crypto-js": "^4.1.1",
    "light-bolt11-decoder": "github:bilthon/light-bolt11-decoder",
    "nostr-tools": "^1.12.0",
    "pinia": "^2.1.4",
    "qrcode.vue": "^3.4.0",
    "sass": "^1.63.6",
    "timeago.js": "^4.0.2",
    "vue": "^3.3.4",
    "vuetify": "^3.3.5",
    "@vueuse/core": "^10.2.1",
    "@vueuse/nuxt": "^10.2.1"
