    "@vue/test-utils": "^2.4.6",
    "auto-changelog": "^2.4.0",
    "jsdom": "^24.1.1",
    "nuxt": "^3.12.4",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5",
    "vue-tsc": "^2.0.29"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@nostr-dev-kit/ndk": "^2.10.4",
