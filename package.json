{
  "name": "mostro-web",
  "private": true,
  "version": "0.0.16",
  "description": "Mostro web client",
  "scripts": {
    "prebuild": "echo \"export const GIT_COMMIT = '$(git rev-parse HEAD)'\" > ./constants/version.js",
    "type-check": "tsc --noEmit",
